<%- include('./includes/head') %>
<%- include('./includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-4">
      <h1 class="text-center fw-bold">CONTATOS</h1>
      <p class="text-center lead">Crie ou edite seus contatos abaixo.</p>

      <%- include('./includes/msgs') %>

      <% if (contact._id) { %>
      <form action="/contacts/update/<%= contact._id %>" method="POST">
      <% } else { %>
      <form action="/contacts/register" method="POST">
      <% } %>

        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group mb-2">
          <label>Nome</label>
          <input value="<%= contact.name %>" type="text" name="name" class="form-control">
        </div>
        <div class="form-group mb-2">
          <label>Sobrenome</label>
          <input value="<%= contact.lastName %>" type="text" name="lastName" class="form-control">
        </div>        
        <div class="form-group mb-2">
          <label>E-mail</label>
          <input value="<%= contact.email %>" type="email" name="email" class="form-control">
        </div>        
        <div class="form-group mb-2">
          <label>Telefone</label>
          <input value="<%= contact.phone %>" type="tel" name="phone" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>

    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('./includes/footer') %>