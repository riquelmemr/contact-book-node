<%- include('./includes/head') %>
<%- include('./includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10 my-4">
      <h1 class="text-center fw-bold">CONTATOS</h1>
      <p class="text-center lead">Seus contatos.</p>

      <%- include('./includes/msgs') %>

      <% if (contacts.length > 0) { %>
        
      <div class="responsive-table mt-5">
        <table class="table table-hover table-striped my-3">
          <thead>
            <tr class="table-dark rounded-circle">
              <th>Name</th>
              <th>Last Name</th>
              <th>Phone</th>
              <th>E-mail</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
          <% contacts.forEach(contact => { %>
            <tr>
              <td><%= contact.name %></td>
              <td><%= contact.lastName %></td>
              <td><%= contact.phone %></td>
              <td><%= contact.email %></td>
              <td>
                <a href="/contacts/index/<%= contact.id %>" class="btn btn-success">Update</a>
                <a href="/contacts/delete/<%= contact.id %>" class="btn btn-danger">Delete</a>
              </td>
            </tr>
          <% }); %>
          </tbody>
        </table>  
      </div>

        <% } else { %>
          <p class="text-center">Você não possui contatos no momento.</p>
        <% } %>
        
    </div>
    <div class="col-lg-1"></div>
  </div>
</div>

<%- include('./includes/footer') %>